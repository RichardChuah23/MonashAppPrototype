<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyBackground">

    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Account"
        android:paddingLeft="12dp"
        android:fontFamily="Roboto"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12sp"
        android:textSize="16sp"
        android:text="Name"
        android:layout_below="@+id/account"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/l_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:text="Name"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView8"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/l_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Email"
        android:layout_above="@+id/l_qtyallowed"
        android:layout_alignStart="@+id/l_name"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12sp"
        android:textSize="16sp"
        android:text="Email"
        android:layout_below="@+id/l_name"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/qtyallowed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:gravity="left"
        android:text="Loan Quota"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/l_qtyallowed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Quota"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/qtyallowed"
        android:layout_alignBottom="@+id/qtyallowed"
        android:layout_alignStart="@+id/l_email" />


    <TextView
        android:id = "@+id/shadowBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:elevation="2dp"
        android:background="@drawable/myrect"
        android:layout_below="@+id/l_qtyallowed"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Loan"
        android:paddingLeft="12dp"
        android:fontFamily="Roboto"

        android:textColor="@android:color/white"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/shadowBar"

        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center|left"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/lv_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>