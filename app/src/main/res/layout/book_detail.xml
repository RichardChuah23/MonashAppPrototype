<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyBackground"
    android:padding="12dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#a5d6a7"
        card_view:cardElevation="3dp"
        android:clickable="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_book_black_24dp"
                android:id="@+id/imageView" />

            <TextView
                android:id="@+id/bookname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Book Name"
                android:textStyle="bold"
                android:fontFamily="Roboto"
                android:paddingTop="9sp"
                android:layout_toEndOf="@+id/imageView"

                />

            <TextView
                android:id="@+id/l_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book name"
                android:paddingTop="9sp"

                android:layout_toEndOf="@+id/bookname"
                />


            <TextView
                android:id="@+id/bookauthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book author"
                android:layout_below="@+id/l_book_name"
                android:layout_toEndOf="@+id/bookname"
                />

            <TextView
                android:id="@+id/l_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book author"
                android:textStyle="bold"

                android:layout_below="@+id/l_book_name"
                android:layout_toEndOf="@+id/imageView"

                />





        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffab91"
        card_view:cardElevation="3dp"
        android:clickable="true"
        android:layout_marginTop="8sp"
        android:layout_below="@+id/cardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_av_timer_black_24dp"
                android:id="@+id/imageView2" />

            <TextView
                android:id="@+id/book_available"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textStyle="bold"

                android:paddingTop="9sp"
                android:layout_toEndOf="@+id/imageView2"
                />


            <TextView
                android:id="@+id/l_book_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="available"
                android:paddingTop="9sp"

                android:layout_toEndOf="@+id/book_available" />

            <TextView
                android:id="@+id/book_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Return due day"
                android:textStyle="bold"

                android:layout_below="@+id/l_book_available"
                android:layout_toEndOf="@+id/imageView2"
                />

            <TextView
                android:id="@+id/l_book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return count down"
                android:layout_below="@+id/l_book_available"
                android:layout_toEndOf="@+id/book_date"
                />

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#e6ee9c"
        card_view:cardElevation="3dp"
        android:clickable="true"
        android:layout_marginTop="8sp"
        android:layout_below="@+id/cardView2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="2dp">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_account_balance_black_24dp"
                android:id="@+id/imageView3" />


            <TextView
                android:id="@+id/book_location"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Book Location"
                android:paddingTop="17sp"
                android:textStyle="bold"

                android:layout_toEndOf="@+id/imageView3"
                />

            <TextView
                android:id="@+id/l_book_location"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Book Location"
                android:paddingTop="17sp"
                android:layout_toEndOf="@+id/book_location"
                />




        </RelativeLayout>

    </android.support.v7.widget.CardView>




    <Button
        android:id="@+id/loan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView3"
        android:layout_marginTop="10sp"
        android:background="@color/colorPrimary"
        android:text="LOAN" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/loan_button"
        android:background="@color/colorPrimary"

        android:text="Return" />


</RelativeLayout>