<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12sp"
    android:paddingRight="12sp"
    android:paddingTop="12sp"
    android:background="@color/colorGreyBackgroundLight"
    android:orientation="vertical"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/l_bookname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Name"
        android:fontFamily="Roboto"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/l_bookauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Arthur"
        android:fontFamily="Roboto"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/l_bookname"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_available"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"


        android:adjustViewBounds="true"
        android:background="@drawable/ic_available"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:paddingTop="2dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/l_bookname"
        android:layout_alignParentEnd="true" />


</RelativeLayout>